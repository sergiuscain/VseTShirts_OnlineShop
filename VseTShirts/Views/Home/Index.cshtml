@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";

}
<form method="post">
    <div class="text-center">
        <input type="text" name="serachTxt" />
        <button asp-controller="Home" asp-action="Search" type="submit">Поиск</button>
    </div>
</form>
<div class="row">
@foreach (var product in Model)
{
    <div class="col-3 card shadow">
        <div class="card-body">
            <a style="color:black" 
            asp-area="" 
            asp-controller="Product"
            asp-action="Index"
            asp-route-id="@product.Id">
            <h5>@product.Name</h5></a>

            <a class="btn btn-success" 
            asp-area=""
            asp-controller="Home"
            asp-action="compare"
            asp-route-id="@product.Id" 
            role="button" >Сравнить</a>

            <a class="btn btn-success" 
            asp-area=""
            asp-controller="Favorite"
            asp-action="Add"
            asp-route-id="@product.Id" 
            role="button">В избранное</a>

            <img style="column-fill" width="250" src="@product.ImagePaths.FirstOrDefault()" alt="@product.ImagePaths.FirstOrDefault()" />
            <h5>@product.Price</h5>
            <a class="btn btn-success" 
            asp-area=""
            asp-controller="Cart"
            asp-action="Add"
            asp-route-id="@product.Id"
            role="button">Добавить в корзину</a>
        </div>
        
    </div>
}

</div>